<% content_for :head do %>
  <script type="text/javascript">
    $j(document).ready(function(){

      var btn;

      btn = $j("#registration_btn");
      btn.click(function(){
        window.location.href='<%= new_user_path %>';
      });

      btn = $j("#login_btn");
      btn.click(function(){
        window.location.href='<%= new_user_session_path %>';
      });

    });
  </script>
<% end %>

<%= render :partial => 'shared/search_bar', :object => @search %>

<% if current_user.nil? %>
